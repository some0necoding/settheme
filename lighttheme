#!/bin/bash
#
# --------------- lighttheme ---------------
#
# This script can be used both to manually
# set kde desktop theme to breeze (light) or 
# to specify the time when it will be set
# automatically.
#

TIMINGS="/usr/local/bin/settheme/timings"

if [ -z "$1" ]; then
	lookandfeeltool -a 'org.kde.breeze.desktop' &> /dev/null
elif [ -n "$1" -a -n "$2" ]; then

	# Check argument
	[[ $1 -ne set ]] && echo "invalid command: $1"; exit 1

	# Check good date format
	[[ $2 =~ "^[0-9]{2}:[0-9][2]:[0-9][2]$" ]] || echo "$2 is not a valid date format. Use instead HH:MM:SS"; exit 1

	# Check if timings file exists. If not, create it.
	[[ -e $TIMINGS ]] || touch $TIMINGS

	# Convert date in HH:MM:SS format into seconds
	l_time=$(date -d"$2" +%s)

	# If inserted date is equal to darktheme time, throw an error
	# else set L_TIME to the inserted date

fi
